@{
  @model PCR.Models.ViewModels.ResetPasswordModel
}
@{
    Layout = "_ManageLayout";

}

@section ul{
    <ul class="navbar-nav ml-auto">

        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
      

        <li class="nav-item">  <a class="nav-link" href='javascript:history.go(-1)'>Back</a></li>

    </ul>
 

    <form class="form-inline">

        <button asp-controller="Account" asp-action="Logout" class="btn btn-outline-success my-2 my-sm-0" type="submit">Log out</button>
    </form>

}
<form method="post">

  <h2 class="text-center">Settings</h2>
  <div>
    <p>
      @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </p>
  </div>
  <div>
    <div class="form-group"><input class="form-control is-invalid" asp-for="Email" type="email" name="EmailID" placeholder="New email"> <span asp-validation-for="Email"></span> </div>
    <small class="form-text text-danger">Please enter a correct email format.</small>
    <div class="form-group"><input class="form-control" type="password" a name="CurrentPass" placeholder="Current password"> <span asp-validation-for="CurrentPass"></span></div>

    <div class="form-group"><input class="form-control" type="password" asp-for="NewPassword" name="NewPassword" placeholder="New password"> <span asp-validation-for="NewPassword"></span></div>
    <div class="form-group"><input class="form-control" type="password" asp-for="ConfirmPassword" name="Cpassword" placeholder="Confirm  password"><span asp-validation-for="ConfirmPassword"></span></div>

  </div>

  <div class="form-group"><button class="btn btn-primary" type="submit">Submit </button></div>

</form>