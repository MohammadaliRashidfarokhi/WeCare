@model PCR.Models.ViewModels.UserViewModel
@{
  Layout = null;
}


<!doctype html>
<html lang="en">


<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="~/css/login.css">
  <!-- Bootstrap CSS -->
</head>


<body class="img js-fullheight" style="background-image:url(/images/illustration.png)">
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 text-center mb-5">

        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <div class="login-wrap p-0">
            <h3 class="mb-4 text-center">Create an account.</h3>
            <form asp-antiforgery="true" method="post" class="signin-form" asp-action="PatientRegistration" asp-controller="Account" name="login">
              <div asp-validation-summary="All" class="text-danger"></div>
            
                <div class="form-group mb-3"><input class="form-control" asp-for="Email" type="email" name="email" placeholder="Email Address"/></div>
                <div class="form-group mb-3"><input class="form-control" asp-for="Name" type="text" name="Name" placeholder="Name"/></div>
                <div class="form-group mb-3"><input class="form-control" asp-for="UserName" type="text" name="username" placeholder="User Name"/></div>
               
                <div class="form-group mb-3"> <input type="password" asp-for="Pass" class="form-control" /></div>
           
                <div class="form-group mb-3"><input class="form-control" asp-for="Pass" type="password" id="confirmPassword" name="password-repeat" placeholder="Repeat password" /></div>
                <div id="passwordsError" style="display: none;margin-bottom: 16.5px;"><span id="errorMessage" class="text-danger" style="font-size:13px;"></span></div>
                <div class="form-group mb-3">
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input" type="checkbox">I agree with the terms and conditions.</label></div>
                </div>
                
                
        
                <input class="btn btn-primary" type="submit" value="Done" />
            </form>

          </div>
        </div>
      </div>
    </div>
  </section>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
          integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
          crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
          integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
          crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
          integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
          crossorigin="anonymous"></script>
  <script defer src="https://static.cloudflareinsights.com/beacon.min.js"
          data-cf-beacon='{"rayId":"66d131a669e30d4e","token":"cd0b4b3a733644fc843ef0b185f98241","version":"2021.6.0","si":10}'></script>
</body>

</html>




