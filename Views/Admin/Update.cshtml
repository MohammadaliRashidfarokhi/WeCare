@{

  ViewBag.Title = "Update";
}
@model PCR.Models.ViewModels.RoleEdit
@{
    Layout = "_ManageLayout";

}


@section ul{
    
    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Users</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="CreateUser" asp-controller="Admin">Create User</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="Roles" asp-controller="Admin">Roles / Users</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="CreateRole" asp-controller="Admin">Create Role</a></li>
    <li class="nav-item">  <a class="nav-link" href='javascript:history.go(-1)'>Back</a></li>

               
    <form class="form-inline">

        <button asp-controller="Account" asp-action="LogOut" class="btn btn-outline-success my-2 my-sm-0" type="submit">Log out</button>
    </form>
}
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
  <input type="hidden" name="roleName" value="@Model.Role.Name" />
  <input type="hidden" name="roleId" value="@Model.Role.Id" />

  <h2 style="background-color: #007bff !important" class=" p-1 text-white">Add To @Model.Role.Name</h2>
  <table class="table table-bordered table-sm">
    @if (Model.NonMembers.Count() == 0)
    {
    <tr><td colspan="2">All Users Are Members</td></tr>
    }
    else
    {
    @foreach (var user in Model.NonMembers)
      {
    <tr>
      <td>@user.UserName</td>
      <td>
        <input type="checkbox" name="AddIds" value="@user.Id">
      </td>
    </tr>
      }
    }
  </table>

  <h2 style="background-color: #007bff !important" class=" p-1 text-white">Remove From @Model.Role.Name</h2>
  <table class="table table-bordered table-sm">
    @if (Model.Members.Count() == 0)
    {
    <tr><td colspan="2">No Users Are Members</td></tr>
    }
    else
    {
    @foreach (var user in Model.Members)
      {
    <tr>
      <td>@user.UserName</td>
      <td>
        <input type="checkbox" name="DeleteIds" value="@user.Id">
      </td>
    </tr>
      }
    }
  </table>
  <button type="submit" class="btn btn-primary">Save</button>
</form>


<br />

