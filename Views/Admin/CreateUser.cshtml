@model PCR.Models.ViewModels.UserViewModel

@{

  ViewBag.Title = "Create User";
}

@{
    Layout = "_ManageLayout";

}



@section ul{
    
    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Users</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="CreateUser" asp-controller="Admin">Create User</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="Roles" asp-controller="Admin">Roles / Users</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="CreateRole" asp-controller="Admin">Create Role</a></li>
    <li class="nav-item">  <a class="nav-link" href='javascript:history.go(-1)'>Back</a></li>

               
    <form class="form-inline">

        <button asp-controller="Account" asp-action="LogOut" class="btn btn-outline-success my-2 my-sm-0" type="submit">Log out</button>
    </form>
}

<hr />
<h2 class="text-danger"> @ViewBag.ERR</h2>


<form method="post" role="form" asp-action="CreateUser">
  @*<span asp-validation-for="UserName"></span>
    <span asp-validation-for="Email"></span>
    <span asp-validation-for="Pass"></span>*@
  <div>
    <h2 class="text-danger"> @ViewBag.ERR</h2>
    <p>
      @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    </p>

  </div>

  <div class="form-group">
    <label class="label" asp-for="Name"></label>
    <br />
    <input asp-for="Name" class="form-control" />

    <label class="label" asp-for="UserName"></label>
    <br />
    <input asp-for="UserName" class="form-control" />

  </div>
  <div class="form-group">

    <label class="label" asp-for="Email"></label>
    <br />
    <input type="email" asp-for="Email" class="form-control" />
  </div>
  <div class="form-group">
    <label class="label" asp-for="Pass"></label>
    <br />
    <input type="password" asp-for="Pass" class="form-control" />



    <input type="hidden" asp-for="Id" />
  </div>
  <div class="form-group">

    <select name="roleName">
      <option selected="selected">Välj roll</option>

      @foreach (var t in Model.Roles)
      {
        <option>@t.Name</option>

      }
    </select>
  </div>


  <input class="btn btn-primary" type="submit" value="Done" />
</form>

<br />
