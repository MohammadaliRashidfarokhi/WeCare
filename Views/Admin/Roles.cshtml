@{

  ViewBag.Title = "Roles";
}
@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>
@{
    Layout = "_ManageLayout";

}



@section ul{
    
    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Users</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="CreateUser" asp-controller="Admin">Create User</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="Roles" asp-controller="Admin">Roles / Users</a></li>
    <li class="nav-item"><a class="nav-link" asp-action="CreateRole" asp-controller="Admin">Create Role</a></li>
    <li class="nav-item">  <a class="nav-link" href='javascript:history.go(-1)'>Back</a></li>

               
    <form class="form-inline">

        <button asp-controller="Account" asp-action="LogOut" class="btn btn-outline-success my-2 my-sm-0" type="submit">Log out</button>
    </form>
}
<div class="container hero">
  <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>ID</th>
        <th>Role Name</th>

        <th>Update</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var role in Model)
      {
        <tr>
          <td>@role.Id</td>
          <td>@role.Name</td>


          <td><a asp-action="Update" asp-route-id="@role.Id">Update</a></td>
          <td>
            <form asp-action="DeleteRole" name="id" id="id" asp-route-id="@role.Id" method="post">
              <button onclick="return confirm('Är du säker att du vill radera rollen?')" type="submit" class="btn btn-sm btn-danger">
                Delete
              </button>
            </form>
          </td>
        </tr>

      }

    </tbody>
  </table>
</div>

<br />